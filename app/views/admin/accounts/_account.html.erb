<tr class="post"
  data-controller="category"
  data-action="mouseenter->category#showAction mouseleave->category#hideAction"
>
  <td>
    <label class="table__label">
      <input type="checkbox" class="checkbox-mark checkmark-id">
      <span class="checkmark"></span>
    </label>
  </td>
  <td>
    <div class="post__image">
      <img src="<%= account.avatar %>" alt="icon-default">
    </div>
  </td>
  <td>
    <div class="post__info">
      <div class="post-title">
        <span><%= account.full_name %></span>
      </div>
      <div class="post-created">
        <span><img src="<%= asset_path("icon/clock.svg") %>" alt="icon-clock"></span>
        <span><%= format_date(account.created_at) %></span>
      </div>
      <div class="post-updated">
        <span><img src="<%= asset_path("icon/edit.svg") %>" alt="icon-edit"></span>
        <span><%= format_date(account.updated_at) %></span>
      </div>
    </div>
  </td>
  <td>
    <div class="post__slug">
      <span><img src="<%= asset_path("icon/link.svg") %>" alt="icon-slug"></span>
      <span><%= account.user_name %></span>
    </div>
  </td>
  <td>
    <div class="post__action js-category-action d-none">
      <div class="action-edit">
        <%= link_to edit_admin_account_path(account.id) do %>
          <span><img src="<%= asset_path("icon/update.svg") %>" alt="icon-update"></span>
        <% end %>
      </div>
    </div>
  </td>
</tr>
