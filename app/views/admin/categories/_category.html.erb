<tr class="post"
  data-controller="category"
  data-action="mouseenter->category#showAction mouseleave->category#hideAction"
>
  <td>
    <label class="table__label">
      <input type="checkbox" class="checkbox-mark checkmark-id">
      <span class="checkmark"></span>
    </label>
  </td>
  <td>
    <div class="post__image">
      <% if category.image_url.present? %>
        <img src="<%= ENV['S3_URL_PREFIX'] %><%= category.image_url.key %>" alt="" class="size-80">
      <% else %>
        <img src="<%= asset_path("80x80.png") %>" alt="icon-default">
      <% end %>
    </div>
  </td>
  <td>
    <div class="post__info">
      <div class="post-title">
        <span><%= category.title %></span>
      </div>
      <div class="post-created">
        <span><img src="<%= asset_path("icon/clock.svg") %>" alt="icon-clock"></span>
        <span><%= format_date(category.created_at) %></span>
      </div>
      <div class="post-updated">
        <span><img src="<%= asset_path("icon/edit.svg") %>" alt="icon-edit"></span>
        <span><%= format_date(category.updated_at) %></span>
      </div>
    </div>
  </td>
  <td>
    <div class="post__slug">
      <span><img src="<%= asset_path("icon/link.svg") %>" alt="icon-slug"></span>
      <span><%= category.slug %></span>
    </div>
  </td>
  <td>
    <div class="post__action js-category-action d-none">
      <div class="action-edit">
        <%= link_to edit_admin_category_path(category.slug) do %>
          <span><img src="<%= asset_path("icon/update.svg") %>" alt="icon-update"></span>
        <% end %>
      </div>
      <div class="action-delete" data-action="click->category#openModal" data-slug="<%= category.slug %>">
        <span><img src="<%= asset_path("icon/delete.svg") %>" alt="icon-delete"></span>
      </div>
    </div>
  </td>
</tr>
