<% provide :title, "Đừng sống một đời quá nhạt" %>
<% provide :url, "/" %>
<% provide :description, "Ngày đó chở theo ánh mắt trong trẻo nhìn cuộc đời không một chút hoài nghi, thế giới trong đồng tử của một đứa trẻ con bao giờ cũng đẹp tuyệt." %>

<div class="autopagerize_page_element">
  <div class="content">
    <% if @posts.present? %>
      <% @posts.each do |post|%>
        <div class="post animated fadeInDown">
          <div class="post-title">
            <h2>
              <%= link_to post.title , post_path(post.slug_html) %>
            </h2>
          </div>
          <div class="post-content">
            <p><%= post.description %></p>
          </div>
          <div class="post-banner">
            <% extract_image_urls_from_content(post.content).take(8).each do |src| %>
              <%= image_tag src, class: "size-10" %>
            <% end %>
          </div>
          <div class="post-footer">
            <div class="meta">
              <div class="info">
                <%= image_tag("icon/clock2.svg", alt: "icon clock") %>
                <span class="date"> <%= post.created_at.strftime(Settings.time.formats) %></span>

                <%= image_tag("icon/eye.svg", alt: "icon view") %> 
                <span class="date"> <%= post.view_count %></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="post">
        Comming soon...
      </div>
    <% end %>
  </div>
</div>
