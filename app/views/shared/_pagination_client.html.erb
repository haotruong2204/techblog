<% link = pagy_link_proc(pagy) %>
<ul class="pagination__custom">
  <% if pagy.prev %>
    <li class="page-item">
      <%== link.call(pagy.prev, 'prev', 'aria-label="previous" class="page-link"') %>
    </li>
  <% else %>
    <li class="page-item disabled">
      <%==link.call(1, 'prev', 'class="page-link"') %>
    </li>
  <% end %>
  <% pagy.series.each do |item| %>
    <% if item.is_a?(Integer) %>
      <li class="page-item">
        <%== link.call(item, item, 'class=page-link') %>
      </li>
    <% elsif item.is_a?(String) %>
      <li class="page-item active">
        <%= link_to(item, "javascript:void(0)", class: "page-link") %>
      </li>
    <% elsif item == :gap %>
    <li class="page-item disabled">
        <%== link_to("...", "javascript:void(0)", class: "page-link") %>
      </li>
    <% end %>
  <% end %>
  <% if pagy.next %>
    <li class="page-item">
      <%== link.call(pagy.next, 'next', 'aria-label="next" class="page-link"') %>
    </li>
  <% else %>
    <li class="page-item disabled">
      <%== link.call(pagy.last, 'next', 'class="page-link"') %>
    </li>
  <% end %>
</ul>
